<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chemistryapp.Controller.IdealGasController"
          alignment="center" hgap="10" vgap="10">

    <Label text="Ideal Gas Law Calculator" GridPane.columnSpan="2" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Label text="Pressure (P in Pa):" GridPane.rowIndex="1"/>
    <TextField fx:id="pressureField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-min-width: 364px;
            -fx-max-width: 364px; -fx-min-height: 45px;-fx-border-color: lightgray; -fx-padding: 10px;
            -fx-border-radius: 7px; -fx-background-radius: 7px;"/>

    <Label text="Volume (V in mÂ³):" GridPane.rowIndex="2"/>
    <TextField fx:id="volumeField" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-min-width: 364px;
            -fx-max-width: 364px; -fx-min-height: 45px;-fx-border-color: lightgray; -fx-padding: 10px;
            -fx-border-radius: 7px; -fx-background-radius: 7px;"/>

    <Label text="Amount (n in mol):" GridPane.rowIndex="3"/>
    <TextField fx:id="amountField" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-min-width: 364px;
            -fx-max-width: 364px; -fx-min-height: 45px;-fx-border-color: lightgray; -fx-padding: 10px;
            -fx-border-radius: 7px; -fx-background-radius: 7px;"/>

    <Label text="Temperature (T in K):" GridPane.rowIndex="4"/>
    <TextField fx:id="temperatureField" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-min-width: 364px;
            -fx-max-width: 364px; -fx-min-height: 45px;-fx-border-color: lightgray; -fx-padding: 10px;
            -fx-border-radius: 7px; -fx-background-radius: 7px;"/>

    <Button fx:id="calculateButton" text="Calculate" GridPane.rowIndex="5" GridPane.columnSpan="2" onAction="#calculate"
            style="-fx-background-color: #386641; -fx-text-fill: white; -fx-font-weight: bold;-fx-font-size: 14px;
                -fx-min-width: 364px; -fx-max-width: 364px; -fx-min-height: 45px;-fx-border-radius: 10px;
                -fx-alignment: center; -fx-padding: 10px;"/>

    <Label fx:id="resultLabel" text="Result: " GridPane.rowIndex="6" GridPane.columnSpan="2"/>
    <Label fx:id="unitLabel" text="" GridPane.rowIndex="7" GridPane.columnSpan="2"/>

</GridPane>